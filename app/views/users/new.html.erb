<div class="container">
	<div class="row">
		<div class="span9">
			<% if @user.errors.any? %>
			<p>
				<%= @user.errors.full_messages %>
			</p>
			<% end %>
			<br/>
			<%= form_for @user  , :html => { :class => 'form-horizontal' } do |f| %>
			<div class="control-group">
				<label style="float:left;padding-right: 5%" class="control-label">Enter your Nickname</label>
				<div class="controls">
					<%= f.text_field :name,:class =>'text_field'  %>
				</div>
			</div>
			<div class="form-actions">
			<%= f.submit('Continue' ,:class =>'btn btn-small btn-primary') %>
				</div>
			<% end %>
		</div>
	</div>
</div>
